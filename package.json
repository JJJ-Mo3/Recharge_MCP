{
  "name": "recharge-mcp-server",
  "version": "1.1.0",
  "description": "Model Context Protocol (MCP) server for Recharge API v2021-11 - enables AI assistants to manage subscriptions, customers, orders, and charges",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "node -c index.js && node -c src/recharge-client.js && node -c src/tool-handlers.js && node -c src/tools/index.js",
    "lint": "echo \"No linting configured - consider adding ESLint for production use\"", 
    "check": "npm run validate && echo \"âœ… All validations passed\"",
    "audit": "npm audit --audit-level=moderate"
  },
  "keywords": [
    "mcp", 
    "model-context-protocol", 
    "recharge", 
    "recharge-api", 
    "subscriptions", 
    "payments", 
    "ecommerce", 
    "recurring-billing", 
    "ai-assistant", 
    "claude", 
    "copilot"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/recharge-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/recharge-mcp-server/issues"
  },
  "homepage": "https://github.com/your-username/recharge-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "dotenv": "latest"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "files": [
    "index.js",
    "src/",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-username"
  }
}