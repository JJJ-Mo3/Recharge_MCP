{
  "name": "recharge-mcp-server",
  "version": "1.1.0",
  "description": "Model Context Protocol (MCP) server for Recharge API v2021-11 - enables AI assistants to manage subscriptions, customers, orders, and charges",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "npx jest",
    "test:unit": "npx jest --testPathPattern=tests/unit",
    "test:integration": "npx jest --testPathPattern=tests/integration",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "test:ci": "npx jest --ci --coverage --watchAll=false",
    "validate": "node -c index.js && node -c src/recharge-client.js && node -c src/tool-handlers.js && node -c src/tools/index.js",
    "lint": "echo \"✅ Linting placeholder - consider adding ESLint for production use\"", 
    "check": "npm run validate && echo \"✅ All validations passed\"",
    "audit": "npm audit --audit-level=moderate",
    "test:tools": "npx jest --testPathPattern=tests/unit/all-tools.test.js",
    "test:integration:full": "npx jest --testPathPattern=tests/integration/all-tools.test.js"
  },
  "keywords": [
    "mcp", 
    "model-context-protocol", 
    "recharge", 
    "recharge-api", 
    "subscriptions", 
    "payments", 
    "ecommerce", 
    "recurring-billing", 
    "ai-assistant", 
    "claude", 
    "copilot"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/recharge-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/recharge-mcp-server/issues"
  },
  "homepage": "https://github.com/your-username/recharge-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "dotenv": "latest"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "@types/jest": "^29.5.12",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "files": [
    "index.js",
    "src/",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-username"
  }
}