{
  "name": "recharge-mcp-server",
  "version": "1.1.0",
  "description": "MCP server for Recharge API",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "build": "npm run validate && npm run build:functions && echo \"Build completed successfully. Ready for deployment.\"",
    "build:functions": "mkdir -p dist && echo 'Build artifacts ready'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "validate": "node -c index.js && node -c src/recharge-client.js && node -c src/tool-handlers.js && node -c src/tools.js",
    "prestart": "npm run validate"
  },
  "keywords": ["mcp", "recharge", "payments", "subscriptions"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "dotenv": "latest"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}